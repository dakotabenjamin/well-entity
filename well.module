  */
function well_uri($well){
  return array(
    'path' => 'well/' . $well->id,
  );
}

/**
  * Implements hook_load()
  * This function and the following loads the well entity
  */
function well_load($pid = NULL, $reset = FALSE){
  $pids = (isset ($pid) ? array($pid) : array());
  $well = well_load_multiple($pids, $reset);
  return $well ? reset ($well) : FALSE;
}
 
function well_load_multiple($pids = array(), $conditions = array(), $reset = FALSE){
  return entity_load('well', $pids, $conditions, $reset);
}


